                background $bgcol
                statusline $textcol
                separator $bgcol

                focused_workspace  $bgcol $bgcol $highcol
                active_workspace   $bgcol $bgcol $highcol
                inactive_workspace $bgcol $bgcol $textcol
                urgent_workspace   $bgcol $bgcol #D68787

